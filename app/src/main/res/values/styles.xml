<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="principal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    // Texto De topo de Orientação
    <style name="DivisaoOrienta">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/material_on_surface_emphasis_high_type</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    // Botoões Divisões
    <style name="button_Divisao">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
//--------------------------------------------------------------------------------------------------
    Vistorias Passo-aPasso
    // Título vistorias passo a passo
    <style name="vist_passoApassoT">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    // Observações vistorias passo a passo
    <style name="vist_passoApassoObs">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/red_700</item>
    </style>

    // Textos vistorias passo a passo
    <style name="vist_passoApassoTxt">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:justificationMode" tools:ignore="NewApi">inter_word</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    //--------------------------------------------------------------------------------------------------
    // Tela_Controle_Resultado
    <style name="Tela_Controle_Resultado">

    </style>

    // Tela_Controle_Resultado Bordas
    <style name="Tela_Controle_Resultado_Bordas">
        <item name="android:solidColor">#FFFFFF</item>
        <item name="strokeWidth">3dp </item>
        <item name="android:color">#B1BCBE</item>
        <item name="cornerRadius">10dp</item>
    </style>
</resources>