<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.stone4.criterios.Pavimentos">


    <TextView
        android:id="@+id/tv_pavimentos"
        style="@style/DivisaoOrienta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tv_pavimentos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Psim"
        style="@style/button_Divisao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/button_Psim"
        android:onClick="onClick"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pavimentos" />

    <Button
        android:id="@+id/Pnao"
        style="@style/button_Divisao"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="@string/button_Pnao"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Psim" />

</androidx.constraintlayout.widget.ConstraintLayout>