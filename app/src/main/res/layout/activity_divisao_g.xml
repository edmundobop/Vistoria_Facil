<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="br.com.stone4.divisoes.DivisaoG">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lay_vert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_divg"
                style="@style/DivisaoOrienta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="@string/tv_divaorienta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/G1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/button_G1"
                android:onClick="onClick"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/purple_200" />

            <Button
                android:id="@+id/G2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/button_G2"
                android:onClick="onClick"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/purple_700" />

            <Button
                android:id="@+id/G3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/button_G3"
                android:onClick="onClick"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/teal_200" />

            <Button
                android:id="@+id/G4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/button_G4"
                android:onClick="onClick"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/design_default_color_error" />

            <Button
                android:id="@+id/G5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/button_G5"
                android:onClick="onClick"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:id="@+id/G6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/button_G6"
                android:onClick="onClick"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@android:color/holo_orange_dark" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>